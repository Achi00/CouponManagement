<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CouponApp.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components/offer-card.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CouponApp.Web.styles.css" asp-append-version="true" />
    <style>
        *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

        :root {
            --bg: #f7f7f7;
            --surface: #ffffff;
            --surface2: #f1f1f1;
            --border: #e5e5e5;
            --accent: #c6ff2e;
            --accent2: #ff6b35;
            --text: #1a1a1a;
            --muted: #666;
            --font-display: 'Syne', sans-serif;
            --font-body: 'DM Sans', sans-serif;
            --radius: 12px;
        }

        body {
            background: var(--bg);
            color: var(--text);
            font-family: var(--font-body);
            font-size: 15px;
            line-height: 1.6;
            min-height: 100vh;
        }

        /* nav */
        nav {
            position: sticky;
            top: 0;
            z-index: 100;
            background: rgba(255,255,255,0.9);
            backdrop-filter: blur(12px);
            border-bottom: 1px solid var(--border);
            padding: 0 2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: 64px;
        }

        .nav-logo {
            font-family: var(--font-display);
            font-size: 1.5rem;
            font-weight: 800;
            color: var(--accent);
            text-decoration: none;
            letter-spacing: -0.5px;
        }

        .auth-container {
            display: flex;
            justify-content: center;
            margin-top: 60px;
        }

        .auth-card {
            width: 420px;
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: var(--radius);
            padding: 2rem;
        }

            .auth-card h2 {
                font-family: var(--font-display);
                margin-bottom: 1.5rem;
            }

        .nav-logo span { color: var(--text); }

        .nav-links {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            list-style: none;
        }

        .nav-links a {
            color: var(--muted);
            text-decoration: none;
            font-size: 0.875rem;
            font-weight: 500;
            padding: 0.4rem 0.75rem;
            border-radius: 8px;
            transition: color 0.2s, background 0.2s;
        }

        .nav-links a:hover { color: var(--text); background: var(--surface2); }

        .btn {
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
            padding: 0.5rem 1.25rem;
            border-radius: 8px;
            font-family: var(--font-body);
            font-size: 0.875rem;
            font-weight: 500;
            cursor: pointer;
            text-decoration: none;
            border: none;
            transition: all 0.2s;
        }

        .btn-primary {
            background: var(--accent);
            color: #0d0d0d;
            font-weight: 700;
        }

        .btn-primary:hover { background: #d4eb30; transform: translateY(-1px); }

        .btn-outline {
            background: transparent;
            color: var(--text);
            border: 1px solid var(--border);
        }

        .btn-outline:hover { border-color: var(--accent); color: var(--accent); }

        .btn-danger {
            background: #ff4444;
            color: white;
            font-weight: 600;
        }

        .btn-danger:hover { background: #e03030; }

        /* auth pages*/
        .auth-links {
            margin-top: 14px;
            font-size: 0.9rem;
        }

            .auth-links a {
                color: var(--accent2);
                text-decoration: none;
            }

                .auth-links a:hover {
                    text-decoration: underline;
                }

        .auth-actions {
            margin-top: 18px;
        }

        .muted {
            color: var(--muted);
        }

        /* main */
        main { padding: 2.5rem 2rem; max-width: 1280px; margin: 0 auto; }

        /* alerts */
        .alert {
            padding: 0.875rem 1.25rem;
            border-radius: var(--radius);
            margin-bottom: 1.5rem;
            font-size: 0.875rem;
            border-left: 3px solid;
        }

        .alert-success { background: rgba(100,220,100,0.08); border-color: #4caf50; color: #81c784; }
        .alert-error { background: rgba(255,80,80,0.08); border-color: #f44336; color: #e57373; }
        .alert-info { background: rgba(232,255,71,0.08); border-color: var(--accent); color: var(--accent); }

        /* badge */
        .badge {
            display: inline-block;
            padding: 0.2rem 0.6rem;
            border-radius: 20px;
            font-size: 0.7rem;
            font-weight: 700;
            letter-spacing: 0.5px;
            text-transform: uppercase;
        }

        .badge-accent { background: var(--accent); color: #0d0d0d; }
        .badge-orange { background: var(--accent2); color: white; }
        .badge-muted { background: var(--surface2); color: var(--muted); }

        /* footer */
        footer {
            border-top: 1px solid var(--border);
            padding: 2rem;
            text-align: center;
            color: var(--muted);
            font-size: 0.8rem;
            margin-top: 4rem;
        }

        /* form */
        .form-group { margin-bottom: 1.25rem; }
        .form-label { display: block; font-size: 0.8rem; font-weight: 600; color: var(--muted); margin-bottom: 0.4rem; text-transform: uppercase; letter-spacing: 0.5px; }
        .form-control {
            width: 100%;
            padding: 0.65rem 1rem;
            background: var(--surface2);
            border: 1px solid var(--border);
            border-radius: 8px;
            color: var(--text);
            font-family: var(--font-body);
            font-size: 0.9rem;
            transition: border-color 0.2s;
            outline: none;
        }
        .form-control:focus { border-color: var(--accent); }
        .form-control::placeholder { color: var(--muted); }
        .field-validation-error { color: #e57373; font-size: 0.8rem; margin-top: 0.3rem; display: block; }
        .validation-summary-errors ul { list-style: none; }
        .validation-summary-errors li { color: #e57373; font-size: 0.85rem; margin-bottom: 0.25rem; }

        .form-alert {
            background: #fff4f4;
            border: 1px solid #ffc9c9;
            border-left: 4px solid #ff4d4f;
            padding: 12px 14px;
            border-radius: 8px;
            margin-bottom: 18px;
            font-size: 14px;
        }

            .form-alert ul {
                margin: 0;
                padding-left: 18px;
            }

            .form-alert li {
                margin: 4px 0;
            }

        /* card */
        .card {
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: var(--radius);
            overflow: hidden;
            transition: border-color 0.2s, transform 0.2s;
            box-shadow: 0 10px 25px rgba(0,0,0,0.05);
        }

        .card:hover { border-color: #3a3a3a; transform: translateY(-2px); }

        /* page header */
        .page-header {
            margin-bottom: 2.5rem;
        }

        .page-header h1 {
            font-family: var(--font-display);
            font-size: 2.25rem;
            font-weight: 800;
            letter-spacing: -1px;
            line-height: 1.1;
        }

        .page-header p {
            color: var(--muted);
            margin-top: 0.5rem;
            font-size: 0.95rem;
        }

        .badge-success {
            background: rgba(34, 197, 94, 0.15);
            color: #22c55e;
        }

        .badge-danger {
            background: rgba(239, 68, 68, 0.15);
            color: #ef4444;
        }

        .badge-accent {
            background: rgba(234, 179, 8, 0.15);
            color: #eab308;
        }
    </style>

</head>
<body>
    <partial name="_FlashMessages" />
    <nav>
        <a href="/" class="nav-logo">Best<span>Offers</span></a>
        <ul class="nav-links">
            <li><a href="/">Browse</a></li>
            @if (User.Identity?.IsAuthenticated == true)
            {
                @if (User.IsInRole("Admin"))
                {
                    <li>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            Admin Panel
                        </a>
                    </li>
                }
                @if (User.IsInRole("Merchant"))
                {
                    <li><a href="/Merchant">My Merchant</a></li>
                }
                @if (User.IsInRole("Customer"))
                {
                    <li><a href="/Merchant/CreateProfile">Become a Merchant</a></li>
                }
                <a asp-controller="Coupons" asp-action="My">My Coupons</a>
                <a asp-controller="Reservations" asp-action="My">My Reservations</a>
                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline">
                        <button type="submit" class="btn btn-outline" style="cursor:pointer">Logout</button>
                    </form>
                </li>
            }
            else
            {
                <li><a href="/Account/Login" class="btn btn-outline">Login</a></li>
                <li><a href="/Account/Register" class="btn btn-primary">Get Started</a></li>
            }
        </ul>
    </nav>

    <main>
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-error">@TempData["Error"]</div>
        }

        @RenderBody()
    </main>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - CouponApp.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
