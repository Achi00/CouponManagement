@using CouponApp.Web.Models.Account
@model LoginViewModel

<div class="auth-container">
    <div class="auth-card">

        <h2>Welcome back</h2>

        <form asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <input type="hidden" asp-for="ReturnUrl" />
            <div asp-validation-summary="ModelOnly" class="form-alert"></div>

            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control"autofocus />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>

            <div class="form-group">
                <label>
                    <input asp-for="RememberMe" />
                    Remember me
                </label>
            </div>

            <button type="submit" class="btn btn-primary" style="width:100%">
                Login
            </button>

            <div style="margin-top:10px">
                <a asp-action="ForgotPassword">Forgot password?</a>
            </div>

            <div style="margin-top:6px">
                Don't have an account?
                <a asp-action="Register">Register</a>
            </div>

        </form>

    </div>
</div>