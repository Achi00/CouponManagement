@using CouponApp.Web.Models.Home

@model HomeViewModel
@{
    ViewData["Title"] = "Browse Deals";
}

<style>
    .hero {
        padding: 4rem 0 3rem;
        position: relative;
    }

    .hero-label {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        background: rgba(232,255,71,0.1);
        border: 1px solid rgba(232,255,71,0.25);
        color: var(--accent);
        font-size: 0.75rem;
        font-weight: 700;
        letter-spacing: 1px;
        text-transform: uppercase;
        padding: 0.3rem 0.8rem;
        border-radius: 20px;
        margin-bottom: 1.25rem;
    }

    .hero h1 {
        font-family: var(--font-display);
        font-size: clamp(2.5rem, 6vw, 4.5rem);
        font-weight: 800;
        letter-spacing: -2px;
        line-height: 1.05;
        max-width: 700px;
    }

        .hero h1 em {
            font-style: normal;
            color: var(--accent);
        }

    .hero-sub {
        color: var(--muted);
        font-size: 1rem;
        margin-top: 1rem;
        max-width: 450px;
    }

    /* SEARCH + FILTER BAR */
    .filter-bar {
        display: flex;
        gap: 0.75rem;
        margin: 2.5rem 0;
        flex-wrap: wrap;
        align-items: center;
    }

    .search-input {
        flex: 1;
        min-width: 240px;
        padding: 0.65rem 1rem;
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: 8px;
        color: var(--text);
        font-family: var(--font-body);
        font-size: 0.9rem;
        outline: none;
        transition: border-color 0.2s;
    }

        .search-input:focus {
            border-color: var(--accent);
        }

        .search-input::placeholder {
            color: var(--muted);
        }

    .category-pills {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .pill {
        padding: 0.4rem 1rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        cursor: pointer;
        border: 1px solid var(--border);
        background: var(--surface);
        color: var(--muted);
        text-decoration: none;
        transition: all 0.2s;
    }

        .pill:hover, .pill.active {
            background: var(--accent);
            color: #0d0d0d;
            border-color: var(--accent);
        }

    /* OFFERS GRID */
    .section-title {
        font-family: var(--font-display);
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 2px;
        color: var(--muted);
        margin-bottom: 1.25rem;
    }

    .offers-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.25rem;
    }

    .offer-card {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        overflow: hidden;
        transition: border-color 0.2s, transform 0.2s;
        display: flex;
        flex-direction: column;
    }

        .offer-card:hover {
            border-color: #3a3a3a;
            transform: translateY(-3px);
        }

    .offer-card-body {
        padding: 1.25rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .offer-card-top {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 0.75rem;
    }

    .offer-title {
        font-family: var(--font-display);
        font-size: 1.05rem;
        font-weight: 700;
        line-height: 1.3;
        flex: 1;
        padding-right: 0.75rem;
    }

    .discount-badge {
        background: var(--accent);
        color: #0d0d0d;
        font-size: 0.75rem;
        font-weight: 800;
        padding: 0.25rem 0.6rem;
        border-radius: 6px;
        white-space: nowrap;
    }

    .offer-pricing {
        display: flex;
        align-items: baseline;
        gap: 0.5rem;
        margin: 0.75rem 0;
    }

    .price-new {
        font-family: var(--font-display);
        font-size: 1.6rem;
        font-weight: 800;
        color: var(--accent);
        letter-spacing: -1px;
    }

    .price-old {
        font-size: 0.85rem;
        color: var(--muted);
        text-decoration: line-through;
    }

    .offer-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: auto;
        padding-top: 0.75rem;
        border-top: 1px solid var(--border);
    }

    .offer-meta-item {
        font-size: 0.78rem;
        color: var(--muted);
        display: flex;
        align-items: center;
        gap: 0.3rem;
    }

        .offer-meta-item.urgent {
            color: var(--accent2);
            font-weight: 600;
        }

    .offer-card-footer {
        padding: 0.875rem 1.25rem;
        border-top: 1px solid var(--border);
        background: rgba(255,255,255,0.02);
    }

    .sold-out-bar {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.7rem;
        background: rgba(255,255,255,0.03);
        border-radius: 8px;
        color: var(--muted);
        font-size: 0.8rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        text-transform: uppercase;
    }

    .empty-state {
        text-align: center;
        padding: 5rem 2rem;
        color: var(--muted);
    }

        .empty-state h3 {
            font-family: var(--font-display);
            font-size: 1.5rem;
            color: var(--text);
            margin-bottom: 0.5rem;
        }
</style>

<!-- HERO -->
<section class="hero">
    <div class="hero-label">✦ Live Deals</div>
    <h1>Save big on<br><em>exclusive offers</em></h1>
    <p class="hero-sub">Browse hundreds of verified discounts from top merchants near you.</p>
</section>

<!-- FILTER BAR -->
<form method="get" asp-action="Index">
    <div class="filter-bar">
        <input type="text" name="SearchQuery" value="@Model.SearchQuery"
               class="search-input" placeholder="Search deals..." />

        <div class="category-pills">
            <a href="/" class="pill @(Model.SelectedCategoryId == null ? "active" : "")">All</a>
            @foreach (var cat in Model.Categories)
            {
                <a href="?categoryId=@cat.Id" class="pill @(Model.SelectedCategoryId == cat.Id ? "active" : "")">
                    @cat.Name
                </a>
            }
        </div>

        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<!-- OFFERS -->
<p class="section-title">@Model.Offers.Count deals available</p>

@if (!Model.Offers.Any())
{
    <div class="empty-state">
        <h3>No deals found</h3>
        <p>Try a different category or search term.</p>
    </div>
}
else
{
    <div class="offers-grid">
        @foreach (var offer in Model.Offers)
        {
            var discount = (int)Math.Round((1 - offer.DiscountedPrice / offer.OriginalPrice) * 100);
            var isUrgent = offer.RemainingCoupons <= 5 && offer.RemainingCoupons > 0;
            var isSoldOut = offer.RemainingCoupons <= 0;
            var daysLeft = (offer.EndDate - DateTime.UtcNow).Days;

            <div class="offer-card">
                <div class="offer-card-body">
                    <div class="offer-card-top">
                        <div class="offer-title">@offer.Title</div>
                        <div class="discount-badge">-@discount%</div>
                    </div>

                    <div class="offer-pricing">
                        <span class="price-new">$@offer.DiscountedPrice.ToString("0.00")</span>
                        <span class="price-old">$@offer.OriginalPrice.ToString("0.00")</span>
                    </div>

                    <div class="offer-meta">
                        <span class="offer-meta-item @(isUrgent ? "urgent" : "")">
                            @if (isSoldOut)
                            {
                                <span>Sold out</span>
                            }
                            else if (isUrgent)
                            {
                                <span>⚡ Only @offer.RemainingCoupons left</span>
                            }
                            else
                            {
                                <span>@offer.RemainingCoupons available</span>
                            }
                        </span>
                        <span class="offer-meta-item">
                            @if (daysLeft <= 0)
                            {
                                <span style="color: #f44336">Expired</span>
                            }
                            else if (daysLeft == 1)
                            {
                                <span style="color: var(--accent2)">Last day!</span>
                            }
                            else
                            {
                                <span>@daysLeft days left</span>
                            }
                        </span>
                    </div>
                </div>

                <div class="offer-card-footer">
                    @if (isSoldOut)
                    {
                        <div class="sold-out-bar">Sold Out</div>
                    }
                    else
                    {
                        <a href="/Home/Details/@offer.Id" class="btn btn-primary" style="width:100%; justify-content:center">
                            View Deal →
                        </a>
                    }
                </div>
            </div>
        }
    </div>
}
