@using CouponApp.Domain.Enums
@using CouponApp.Web.Models.Merchant

@model List<MerchantOfferViewModel>

<div class="page-header">
    <h1>My Offers</h1>
    <p>Manage your deals</p>
</div>

<div style="margin-bottom:20px">
    <a asp-action="Create" class="btn btn-primary">
        Create Offer
    </a>
</div>

@if (!Model.Any())
{
    <div class="card" style="padding:30px;text-align:center">
        <h3>No offers yet</h3>
        <p class="muted">Create your first offer to start selling.</p>
    </div>
}
else
{
    <div class="grid">
        @foreach (var offer in Model)
        {
            <div class="card" style="padding:20px">
                @{
                    var badgeClass = offer.Status switch
                    {
                        OfferStatus.Approved => "badge badge-success",
                        OfferStatus.Rejected => "badge badge-danger",
                        _ => "badge badge-accent"
                    };
                }
                <div class="@badgeClass">@offer.Status</div>

                <h3 style="margin-top:10px">@offer.Title</h3>

                <p class="muted">$@offer.DiscountedPrice</p>

                @{
                    if (OfferStatus.Rejected != offer.Status)
                    {
                        <div style="margin-top:10px">
                            <a asp-action="Edit" asp-route-id="@offer.Id" class="btn btn-outline">Edit</a>
                            <form asp-action="Delete" asp-route-id="@offer.Id" method="post" style="display:inline">
                                <button class="btn btn-danger"
                                        onclick="return confirm('Delete this offer?')">
                                    Delete
                                </button>
                            </form>
                        </div>
                    }
                }
            </div>
        }
    </div>
}