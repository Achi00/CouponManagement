@using CouponApp.Web.Models.Merchant

@model CreateMerchantProfileViewModel

<div class="auth-container">
    <div class="auth-card">

        <h2 class="auth-title">Become a Merchant</h2>

        <p class="muted" style="margin-bottom:20px">
            Create your merchant profile to start publishing offers.
        </p>

        <form asp-action="CreateProfile" method="post">

            <div asp-validation-summary="ModelOnly" class="form-alert"></div>

            <div class="form-group">
                <label asp-for="BusinessName" class="form-label"></label>
                <input asp-for="BusinessName" class="form-control" />
                <span asp-validation-for="BusinessName"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description"></span>
            </div>

            <button class="btn btn-primary" style="width:100%">
                Create Merchant Profile
            </button>

        </form>

    </div>
</div>