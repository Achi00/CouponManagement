@using CouponApp.Web.Areas.Admin.ViewModels

@model List<AdminOfferViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Syne:wght@400;600;700;800&family=DM+Sans:wght@300;400;500&display=swap');

    :root {
        --ink: #0f0f0f;
        --paper: #f7f6f2;
        --accent: #e8ff47;
        --accent-dark: #c8df20;
        --muted: #8a8a8a;
        --border: #e0dfd8;
        --success-bg: #e8fff0;
        --success: #00a651;
        --danger-bg: #fff0f0;
        --danger: #e53935;
        --card-shadow: 0 2px 12px rgba(0,0,0,0.07);
    }

    .admin-wrap {
        font-family: 'DM Sans', sans-serif;
        background: var(--paper);
        min-height: 100vh;
        padding: 48px 40px;
        color: var(--ink);
    }

    .page-header {
        display: flex;
        align-items: flex-end;
        justify-content: space-between;
        margin-bottom: 40px;
        padding-bottom: 24px;
        border-bottom: 2px solid var(--ink);
    }

    .page-title {
        font-family: 'Syne', sans-serif;
        font-size: 2.4rem;
        font-weight: 800;
        letter-spacing: -0.03em;
        line-height: 1;
        margin: 0;
    }

        .page-title span {
            display: inline-block;
            background: var(--accent);
            padding: 2px 10px;
            margin-left: 6px;
            font-size: 1rem;
            font-weight: 700;
            vertical-align: middle;
            border-radius: 4px;
            letter-spacing: 0;
            position: relative;
            top: -4px;
        }

    .page-subtitle {
        color: var(--muted);
        font-size: 0.9rem;
        margin: 0;
    }

    /* Offer Cards */
    .offers-grid {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .offer-card {
        background: #fff;
        border: 1.5px solid var(--border);
        border-radius: 12px;
        box-shadow: var(--card-shadow);
        overflow: hidden;
        transition: box-shadow 0.2s, border-color 0.2s;
    }

        .offer-card:hover {
            box-shadow: 0 6px 24px rgba(0,0,0,0.10);
            border-color: #ccc;
        }

    .offer-card-inner {
        display: grid;
        grid-template-columns: auto 1fr auto;
        align-items: center;
        gap: 24px;
        padding: 20px 24px;
    }

    .offer-image {
        width: 72px;
        height: 72px;
        border-radius: 8px;
        object-fit: cover;
        background: var(--paper);
        border: 1px solid var(--border);
        flex-shrink: 0;
    }

    .offer-image-placeholder {
        width: 72px;
        height: 72px;
        border-radius: 8px;
        background: var(--paper);
        border: 1px solid var(--border);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--muted);
        font-size: 1.4rem;
        flex-shrink: 0;
    }

    .offer-meta {
        min-width: 0;
    }

    .offer-title {
        font-family: 'Syne', sans-serif;
        font-size: 1.05rem;
        font-weight: 700;
        margin: 0 0 4px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .offer-tags {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        margin-bottom: 6px;
    }

    .tag {
        font-size: 0.72rem;
        font-weight: 500;
        padding: 2px 8px;
        border-radius: 20px;
        background: var(--paper);
        border: 1px solid var(--border);
        color: var(--muted);
        text-transform: uppercase;
        letter-spacing: 0.04em;
    }

    .offer-price {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.88rem;
    }

    .price-original {
        text-decoration: line-through;
        color: var(--muted);
    }

    .price-discounted {
        font-weight: 700;
        font-size: 1rem;
        color: var(--success);
    }

    .price-badge {
        background: var(--accent);
        color: var(--ink);
        font-size: 0.7rem;
        font-weight: 700;
        padding: 1px 6px;
        border-radius: 4px;
    }

    /* Actions */
    .offer-actions {
        display: flex;
        flex-direction: column;
        gap: 8px;
        align-items: flex-end;
        flex-shrink: 0;
    }

    .btn-row {
        display: flex;
        gap: 8px;
    }

    .btn-view {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.8rem;
        font-weight: 500;
        padding: 6px 14px;
        border-radius: 6px;
        border: 1.5px solid var(--ink);
        background: transparent;
        color: var(--ink);
        cursor: pointer;
        transition: background 0.15s;
        text-decoration: none;
        white-space: nowrap;
    }

        .btn-view:hover {
            background: var(--ink);
            color: #fff;
        }

    .btn-approve {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.8rem;
        font-weight: 600;
        padding: 6px 16px;
        border-radius: 6px;
        border: none;
        background: var(--ink);
        color: var(--accent);
        cursor: pointer;
        transition: opacity 0.15s;
        white-space: nowrap;
    }

        .btn-approve:hover {
            opacity: 0.85;
        }

    .reject-row {
        display: flex;
        gap: 8px;
        align-items: center;
    }

    .reject-input {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.78rem;
        padding: 5px 10px;
        border-radius: 6px;
        border: 1.5px solid var(--border);
        background: var(--paper);
        color: var(--ink);
        width: 200px;
        transition: border-color 0.15s;
    }

        .reject-input:focus {
            outline: none;
            border-color: var(--danger);
        }

    .btn-reject {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.8rem;
        font-weight: 600;
        padding: 6px 14px;
        border-radius: 6px;
        border: 1.5px solid var(--danger);
        background: transparent;
        color: var(--danger);
        cursor: pointer;
        transition: background 0.15s, color 0.15s;
        white-space: nowrap;
    }

        .btn-reject:hover {
            background: var(--danger);
            color: #fff;
        }

    /* Empty state */
    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: var(--muted);
    }

    .empty-state-icon {
        font-size: 3rem;
        margin-bottom: 16px;
    }

    .empty-state h3 {
        font-family: 'Syne', sans-serif;
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--ink);
        margin-bottom: 8px;
    }

    /* Modal */
    .modal-content {
        border-radius: 14px;
        border: 1.5px solid var(--border);
        font-family: 'DM Sans', sans-serif;
    }

    .modal-header {
        border-bottom: 1.5px solid var(--border);
        padding: 20px 24px;
    }

    .modal-title {
        font-family: 'Syne', sans-serif;
        font-weight: 700;
        font-size: 1.15rem;
    }

    .modal-body {
        padding: 24px;
    }

    .modal-offer-image {
        width: 100%;
        max-height: 220px;
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 20px;
        border: 1px solid var(--border);
    }

    .detail-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 14px;
        margin-bottom: 16px;
    }

    .detail-item label {
        font-size: 0.72rem;
        text-transform: uppercase;
        letter-spacing: 0.06em;
        color: var(--muted);
        font-weight: 600;
        display: block;
        margin-bottom: 2px;
    }

    .detail-item span {
        font-size: 0.92rem;
        font-weight: 500;
        color: var(--ink);
    }

    .description-block {
        background: var(--paper);
        border-radius: 8px;
        padding: 14px;
        font-size: 0.88rem;
        line-height: 1.6;
        color: #333;
        margin-top: 4px;
    }
</style>

<div class="admin-wrap">

    <div class="page-header">
        <div>
            <h1 class="page-title">
                Pending Offers
                <span>@Model.Count</span>
            </h1>
        </div>
        <p class="page-subtitle">Review and approve or reject merchant submissions</p>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state">
            <div class="empty-state-icon">✓</div>
            <h3>All caught up</h3>
            <p>No offers are waiting for review right now.</p>
        </div>
    }
    else
    {
        <div class="offers-grid">
            @foreach (var offer in Model)
            {
                <div class="offer-card">
                    <div class="offer-card-inner">

                        <!-- Image -->
                        @if (!string.IsNullOrEmpty(offer.ImageUrl))
                        {
                            <img src="@offer.ImageUrl" class="offer-image" alt="@offer.Title" />
                        }
                        else
                        {
                            <div class="offer-image-placeholder">🏷️</div>
                        }

                        <!-- Info -->
                        <div class="offer-meta">
                            <div class="offer-title">@offer.Title</div>
                            <div class="offer-tags">
                                <span class="tag">@offer.CategoryName</span>
                                <span class="tag">@offer.MerchantName</span>
                                <span class="tag">@offer.RemainingCoupons coupons left</span>
                            </div>
                            <div class="offer-price">
                                <span class="price-original">$@offer.OriginalPrice</span>
                                <span class="price-discounted">$@offer.DiscountedPrice</span>
                                @{
                                    var discount = (int)(100 - (offer.DiscountedPrice / offer.OriginalPrice * 100));
                                }
                                <span class="price-badge">-@discount%</span>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="offer-actions">
                            <div class="btn-row">
                                <button class="btn-view"
                                        data-bs-toggle="modal"
                                        data-bs-target="#offerModal-@offer.Id">
                                    View Details
                                </button>

                                <form asp-action="Approve" method="post" style="margin:0">
                                    <input type="hidden" name="id" value="@offer.Id" />
                                    <button type="submit" class="btn-approve">✓ Approve</button>
                                </form>
                            </div>

                            <form asp-action="Reject" method="post" class="reject-row" style="margin:0">
                                <input type="hidden" name="id" value="@offer.Id" />
                                <input name="reason"
                                       class="reject-input"
                                       placeholder="Rejection reason..."
                                       required />
                                <button type="submit" class="btn-reject">✕ Reject</button>
                            </form>
                        </div>

                    </div>
                </div>

                <!-- Modal -->
                <div class="modal fade" id="offerModal-@offer.Id" tabindex="-1">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">

                            <div class="modal-header">
                                <h5 class="modal-title">@offer.Title</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>

                            <div class="modal-body">
                                @if (!string.IsNullOrEmpty(offer.ImageUrl))
                                {
                                    <img src="@offer.ImageUrl" class="modal-offer-image" alt="@offer.Title" />
                                }

                                <div class="detail-grid">
                                    <div class="detail-item">
                                        <label>Merchant</label>
                                        <span>@offer.MerchantName</span>
                                    </div>
                                    <div class="detail-item">
                                        <label>Category</label>
                                        <span>@offer.CategoryName</span>
                                    </div>
                                    <div class="detail-item">
                                        <label>Original Price</label>
                                        <span><s>$@offer.OriginalPrice</s></span>
                                    </div>
                                    <div class="detail-item">
                                        <label>Discounted Price</label>
                                        <span style="color:var(--success); font-weight:700">$@offer.DiscountedPrice</span>
                                    </div>
                                    <div class="detail-item">
                                        <label>Coupons Remaining</label>
                                        <span>@offer.RemainingCoupons</span>
                                    </div>
                                </div>

                                <div class="detail-item">
                                    <label>Description</label>
                                    <div class="description-block">@offer.Description</div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    }

</div>
