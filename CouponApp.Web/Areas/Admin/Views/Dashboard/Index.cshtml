@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Admin Dashboard</h2>

<div class="row">

    <div class="col-md-4">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title">Pending Offers</h5>
                <p class="card-text">
                    Review offers submitted by merchants.
                </p>

                <a asp-area="Admin"
                   asp-controller="Offers"
                   asp-action="Pending"
                   class="btn btn-primary">
                    Open
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title">Categories</h5>
                <p class="card-text">
                    Manage offer categories.
                </p>

                <a asp-area="Admin"
                   asp-controller="Categories"
                   asp-action="Index"
                   class="btn btn-primary">
                    Open
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title">System Settings</h5>
                <p class="card-text">
                    Configure application settings.
                </p>

                <a asp-area="Admin"
                   asp-controller="SystemSettings"
                   asp-action="Index"
                   class="btn btn-primary">
                    Open
                </a>
            </div>
        </div>
    </div>

</div>