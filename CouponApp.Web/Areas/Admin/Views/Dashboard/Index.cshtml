@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Syne:wght@700;800&family=DM+Sans:wght@400;500&display=swap');

    :root {
        --ink: #0f0f0f;
        --paper: #f7f6f2;
        --accent: #e8ff47;
        --muted: #8a8a8a;
        --border: #e0dfd8;
    }

    .admin-wrap {
        font-family: 'DM Sans', sans-serif;
        background: var(--paper);
        min-height: 100vh;
        padding: 48px 40px;
        color: var(--ink);
    }

    .page-header {
        margin-bottom: 40px;
        padding-bottom: 24px;
        border-bottom: 2px solid var(--ink);
    }

    .page-title {
        font-family: 'Syne', sans-serif;
        font-size: 2.4rem;
        font-weight: 800;
        letter-spacing: -0.03em;
        margin: 0 0 4px;
    }

    .page-subtitle {
        color: var(--muted);
        font-size: 0.9rem;
        margin: 0;
    }

    .nav-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
        gap: 16px;
    }

    .nav-card {
        background: #fff;
        border: 1.5px solid var(--border);
        border-radius: 12px;
        padding: 28px 24px;
        text-decoration: none;
        color: var(--ink);
        display: flex;
        flex-direction: column;
        gap: 10px;
        transition: box-shadow 0.2s, border-color 0.2s, transform 0.15s;
    }

        .nav-card:hover {
            box-shadow: 0 6px 24px rgba(0,0,0,0.10);
            border-color: var(--ink);
            transform: translateY(-2px);
            color: var(--ink);
            text-decoration: none;
        }

    .nav-card-icon {
        font-size: 1.6rem;
        line-height: 1;
    }

    .nav-card-title {
        font-family: 'Syne', sans-serif;
        font-size: 1.05rem;
        font-weight: 700;
    }

    .nav-card-desc {
        font-size: 0.85rem;
        color: var(--muted);
        line-height: 1.4;
        flex: 1;
    }

    .nav-card-arrow {
        font-size: 0.8rem;
        font-weight: 600;
        color: var(--muted);
        display: flex;
        align-items: center;
        gap: 4px;
        transition: gap 0.15s, color 0.15s;
    }

    .nav-card:hover .nav-card-arrow {
        gap: 8px;
        color: var(--ink);
    }
</style>

<div class="admin-wrap">

    <div class="page-header">
        <h1 class="page-title">Admin Dashboard</h1>
        <p class="page-subtitle">Manage your platform</p>
    </div>

    <div class="nav-grid">

        <a asp-area="Admin" asp-controller="Offers" asp-action="Pending" class="nav-card">
            <div class="nav-card-icon">📋</div>
            <div class="nav-card-title">Pending Offers</div>
            <div class="nav-card-desc">Review and approve offers submitted by merchants.</div>
            <div class="nav-card-arrow">Open →</div>
        </a>

        <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="nav-card">
            <div class="nav-card-icon">🏷️</div>
            <div class="nav-card-title">Categories</div>
            <div class="nav-card-desc">Manage offer categories available to merchants.</div>
            <div class="nav-card-arrow">Open →</div>
        </a>

        <a asp-area="Admin" asp-controller="SystemSettings" asp-action="Index" class="nav-card">
            <div class="nav-card-icon">⚙️</div>
            <div class="nav-card-title">System Settings</div>
            <div class="nav-card-desc">Configure application-wide settings.</div>
            <div class="nav-card-arrow">Open →</div>
        </a>

    </div>

</div>
